@model IEnumerable<AeroLinea_Futuro.Models.Vuelos>

@{
    ViewData["Title"] = "Index";
}

<h2>Vuelos Registrados</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Escala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-primary">Registrar</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Escala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id_Vuelos">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id_Vuelos">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id_Vuelos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
